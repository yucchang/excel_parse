<h1>Invoice List</h1>

<%= link_to 'Upload excel', new_import_invoice_path %>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Invoice No.</th>
      <th>Date</th>
      <th>Function</th>
    </tr>
  </thead>

  <tbody>
   <% @invoices.each do |invoice| %>
    <tr>
      <td><%= invoice.customer %></td>
      <td><%= invoice.invoice_no %></td>
      <td><%= invoice.date.strftime("%Y-%m-%d") %></td>
      <td> <%= link_to 'Edit',  edit_invoice_path(invoice) %></td>
      <td> <%= link_to 'Delete', invoice_path(invoice), method: :delete, data: {confirm: 'Sure to delete this?'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
