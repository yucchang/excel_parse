<h2 class="text-2xl">Invoice Information</h2>

<%= form_for @invoice do |f| %>
<table class="table-auto text-center">
  <thead>
    <tr class="bg-gray-200">
      <th class="border px-4 py-2">客戶代碼</th>
      <th class="border px-4 py-2">客戶名稱</th>
      <th colspan="3" class="border px-4 py-2">地址</th>
      <th class="border px-4 py-2"> <%= f.label :state, '狀態' %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="border px-4 py-2"><%= @invoice.customer_code %></td>
      <td class="border px-4 py-2"><%= @invoice.customer %></td>
      <td colspan="3" class="border px-4 py-2"><%= @invoice.address %></td>
      <td class="border px-4 py-2"><%= f.select :state, Invoice.states.keys %></td>
    </tr>
  </tbody>
  <thead>
    <tr class="bg-gray-200">
      <th class="border px-4 py-2">日期</th>
      <th class="border px-4 py-2">Invoice No.</th>
      <th class="border px-4 py-2">PSN</th>
      <th class="border px-4 py-2">件數</th>
      <th class="border px-4 py-2">管制藥品</th>
      <th class="border px-4 py-2">冰品</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="border px-4 py-2"><%=  @invoice.date.strftime("%Y-%m-%d") %></td>
      <td class="border px-4 py-2"><%=  @invoice.invoice_no %></td>
      <td class="border px-4 py-2"><%=  @invoice.PSN %></td>
      <td class="border px-4 py-2"><%=  @invoice.pieces %></td>
      <td class="border px-4 py-2"><%=  is_controlled?(@invoice) %></td>
      <td class="border px-4 py-2"><%=  is_temp_sensitive?(@invoice) %></td>
    </tr>
  </tbody>
</table>
<%= f.submit '更新' %>
<% end %>
